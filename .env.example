# Application Configuration
# Vercel URL removed - using NEXT_PUBLIC_BASE_URL instead
NEXT_PUBLIC_BASE_URL=http://localhost:3333
NEXT_PUBLIC_APP_URL=http://localhost:3333

# Sanity CMS Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01
# IMPORTANT: Replace with your actual Sanity tokens
SANITY_WRITE_TOKEN=your_sanity_write_token_here
SANITY_API_READ_TOKEN=your_sanity_read_token_here

# Authentication (Clerk)
# Get these from your Clerk dashboard at https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Payment Processing (Stripe)
# Get these from your Stripe dashboard at https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe webhook testing
# Run: stripe listen --forward-to localhost:3000/api/webhooks/stripe

# Scheduling
NEXT_PUBLIC_CALENDY=https://calendly.com/your-username/30min

# Email Service (Resend)
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# External Services
# Add any other external service keys here
# NEXT_PUBLIC_SERVICE_API_KEY=your_service_api_key_here
